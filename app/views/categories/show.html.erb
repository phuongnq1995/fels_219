<% provide :title, @category.name %>
<br>
<% if current_user.admin? %>
  <%= link_to t("new_word"), new_word_path(category_id: @category.id),
    class: "btn btn-info btn-sm " %>
<% end %>
<hr>
<div class="panel panel-primary">
  <div class="panel-heading"><h2><%= @category.name %><h2></div>
  <div class="panel-body"><%= @category.discription %></div>
</div>
<% if @category.words.any? %>
  <h3><%= t "all_word" %>(<%= @category.words.size %>)</h3>
  <ol class="panel panel-success">
    <%= render @words %>
  </ol>
  <%= will_paginate @words %>
<% end %>
