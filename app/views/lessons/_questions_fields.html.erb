<div id="question">
  <strong class="row content-block">
    <h4><%= t "question: " %> <%= f.object.word.content %></h4>
  </strong>
  <div class="row">
    <% f.object.word.answers.random_index.each do |answer| %>
    <div class="col-sm-2">
      <%= f.radio_button :answer_id, answer.id, checked: false, class: "content-block" %>
      <%= f.label answer.content %>
    </div>
    <% end %>
  </div>
</div>
